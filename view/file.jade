//- file.jade

extends ./layout

block head
	link(href='http://fonts.googleapis.com/css?family=Source+Code+Pro:400,700', rel='stylesheet', type='text/css')

block content
	.s-navbar
		.s-closure
			.s-ceiling
			table.s-expand
				tr
					//-td
						span
							a(href=ns('/')) &larr; All Posts
					td
						form(method='post')
							input#filename.textbox(type='text', name='name', value=name, placeholder='filename')
					td
						form(method='post')
							input.btn.btn-bar.btn-normal(type='submit', value='Delete')
							input(type='hidden', name='action', value='delete')
					td
						form(method='post')
							input.btn.btn-bar.btn-success(type='submit', value='Update')
							textarea#filedata.textbox(name='data') #{data}
							input#realname(type='hidden', name='name', value=name)
							input(type='hidden', name='action', value='update')
	script(type='text/javascript', async).
		var filename = document.getElementById('filename'),
			realname = document.getElementById('realname');
		filename.oninput = function(e) {
			realname.value = filename.value;
		}
